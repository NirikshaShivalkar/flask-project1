pipeline {
    agent any

    environment {
        VIRTUAL_ENV = "venv"
    }

    stages {
        stage("Git Clone") {
            steps {
                git(
                    credentialsId: 'c7c078f8-e44a-4217-a0ba-0e48a22bfd02',
                    branch: 'main',
                    url: 'https://github.com/NirikshaShivalkar/flask-projectt.git'
                )
            }
        }

        stage('Set Up Python Environment') {
            steps {
                sh '''
                    python -m venv venv
                    source venv/bin/activate
                    python -m pip install --upgrade pip
                    python -m pip install -r requirements.txt
                '''
            }
        }

        stage('Run Tests') {
            steps {
                sh '''
                    source venv/bin/activate
                    pytest --junitxml=report.xml || echo "‚ùå Tests Failed!"
                '''
            }
        }

        stage('Build & Deploy') {
            when {
                expression { return currentBuild.result == null || currentBuild.result == 'SUCCESS' }
            }
            steps {
                sh '''
                    echo "üöÄ Deploying the app..."
                    source venv/bin/activate
                    nohup gunicorn -w 4 -b 0.0.0.0:5000 app:app > gunicorn.log 2>&1 &
                    echo "‚úÖ Application deployed successfully!"
                '''
            }
        }
    }

    post {
        always {
            junit 'report.xml'
        }
        failure {
            echo '‚ùå Test Failed! Stopping Deployment.'
        }
        success {
            echo '‚úÖ All tests passed! Application deployed successfully.'
        }
    }
}
