pipeline {
    agent any

    environment {
        VIRTUAL_ENV = "venv"
    }

    stages {
        stage("Git Clone") {
            steps {
                git(
                    credentialsId: 'c7c078f8-e44a-4217-a0ba-0e48a22bfd02',
                    branch: 'main',
                    url: 'https://github.com/NirikshaShivalkar/flask-projectt.git'
                )
            }
        }

        stage('Set Up Python Environment') {
            steps {
                sh 'python3 -m venv venv'
                sh 'source venv/bin/activate && pip install -r requirements.txt'
            }
        }

        stage('Run Tests') {
            steps {
                sh 'source venv/bin/activate && pytest --junitxml=report.xml'
            }
        }

        stage('Build & Deploy') {
            when {
                expression {
                    return currentBuild.result == null || currentBuild.result == 'SUCCESS'
                }
            }
            steps {
                sh 'echo "Deploying the app..."'
                sh 'source venv/bin/activate && gunicorn -w 4 -b 0.0.0.0:5000 app:app &'
            }
        }
    }

    post {
        always {
            junit 'report.xml'
        }
        failure {
            echo '❌ Test Failed! Stopping Deployment.'
        }
        success {
            echo '✅ All tests passed! Application deployed successfully.'
        }
    }
}
